<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="fresco框架"/>

    <TextView
        android:id="@+id/fresco_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="fresco框架"/>

    <!--placeholderImage:占位符图片-->
    <!--placeholderImageScaleType:占位符图片缩放类型-->
    <!--fadeDuration:淡入淡出-->
    <!--overlayImage:叠加图-->
    <!--pressedStateOverlayImage:按压状态下的叠加图-->
    <!--fresco:roundAsCircle="true"是否显示圆形图-->
    <!--fresco:roundedCornerRadius="30dp"圆角图,设置圆角半径-->
    <!--fresco:roundWithOverlayColor="@android:color/darker_gray"-->
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/fresco_imgv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        fresco:actualImageScaleType="focusCrop"
        fresco:backgroundImage="@android:color/holo_orange_light"
        fresco:failureImage="@mipmap/icon_failure"
        fresco:failureImageScaleType="centerInside"
        fresco:placeholderImage="@mipmap/icon_placeholder"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:progressBarAutoRotateInterval="5000"
        fresco:progressBarImage="@mipmap/icon_progress_bar"
        fresco:progressBarImageScaleType="centerInside"
        fresco:retryImage="@mipmap/icon_retry"
        fresco:retryImageScaleType="centerCrop"
        fresco:roundAsCircle="true"
        fresco:roundedCornerRadius="30dp"
        fresco:roundingBorderColor="@android:color/holo_green_dark"
        fresco:roundingBorderWidth="10dp">

    </com.facebook.drawee.view.SimpleDraweeView>
</LinearLayout>